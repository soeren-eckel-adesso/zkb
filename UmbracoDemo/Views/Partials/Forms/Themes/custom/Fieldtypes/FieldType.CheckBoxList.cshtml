@model Umbraco.Forms.Web.Models.FieldViewModel

@{ var i = 0; } 

@foreach (var pv in Model.PreValues)
{
    <div class="form-check py-1">
        <input class="form-check-input" type="checkbox" name="@Model.Name" id="@string.Concat(Model.Id, "_", i)" data-umb="@string.Concat(Model.Id, "_", i)" value="@pv.Value"
               @if (Model.Mandatory)
               {
                   <text>data-val="true" data-val-required="@Model.RequiredErrorMessage" data-rule-required="true" data-msg-required="@Model.RequiredErrorMessage"</text>
               }
               @if (Model.ContainsValue(pv.Value))
               {
                   <text>checked="checked"</text>
               }>
        <label class="form-check-label" for="@string.Concat(Model.Id, "_", i)">
            @pv.Caption
        </label>
    </div>
    
    { i++; }
}